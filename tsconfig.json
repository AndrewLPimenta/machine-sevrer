{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",        // importante para Node.js e tipos de módulos
    "allowSyntheticDefaultImports": true, // facilita importações de pacotes JS sem types
    "noImplicitAny": false              // opcional: evita erros TS7016 para pacotes sem @types
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
